<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/corPrincipal"
        android:orientation="vertical">
        <EditText
            android:id="@+id/Edit_codCli"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Boa Leitura"
            android:textColor="#fff"
            android:textSize="50dp" />
        <TextView
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados Pessoais:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo:"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/Edit_NomeCli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:textColor="#fff" />

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/Edit_EmailCli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:inputType="text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPF:"
                    android:textColor="#fff" />


            </LinearLayout>

            <EditText
                android:id="@+id/Edit_Cpfcli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel/Cel:"
                android:textColor="#fff" />

            <EditText
                android:inputType="number"
                android:id="@+id/Edit_TelCli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço com Nº da casa"
                android:textColor="#fff" />

            <EditText
                android:inputType="text"
                android:id="@+id/Edit_EndCli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP:"
                android:textColor="#fff" />

            <EditText
                android:inputType="text"
                android:id="@+id/Edit_CEPcli"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:textColor="@color/corPrincipal" />


            <Button
                android:id="@+id/btnCriaCli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:text="Cadastrar"
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>